                                            </content>
                                        </CustomMenuItem>
                                    </items>
                                    <graphic>
                                        <HBox alignment="CENTER_LEFT" prefHeight="22.0" prefWidth="143.0">
                                            <children>
                                                <Label fx:id="label" prefHeight="18.0" prefWidth="123.0"
                                                       text="Default"/>
                                                <FontIcon iconLiteral="fas-sort" iconSize="10" text=""
                                                          wrappingWidth="6.600037336349487"/>
                                            </children>
                                        </HBox>
                                    </graphic>

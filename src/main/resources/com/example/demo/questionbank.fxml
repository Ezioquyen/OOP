                                        <FontIcon iconColor="#009ee5" iconLiteral="fas-caret-down"
                                                  wrappingWidth="8.800018310546875"/>
                                    </graphic>
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Label>
                                <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">

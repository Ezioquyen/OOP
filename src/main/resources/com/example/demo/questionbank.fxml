                                                            style="-fx-border-color: black;" styleClass="menubutton">
                                                    <items>
                                                        <CustomMenuItem hideOnClick="false" mnemonicParsing="false"
                                                                        styleClass="menu-item"
                                                                        text="Unspecified Action">
                                                            <content>
                                                                <TreeView fx:id="root1" prefHeight="200.0"

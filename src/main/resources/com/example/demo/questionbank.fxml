<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox style="-fx-border-color: #C8CCE8;" VBox.vgrow="ALWAYS">
            <children>
                <TabPane prefHeight="489.0" prefWidth="760.0" styleClass="tabtab" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Questions">
                            <content>

                                <VBox prefHeight="434.0" prefWidth="786.0" spacing="10.0" styleClass="tab-pane">

                                    <Label prefHeight="46.0" prefWidth="238.0" text="Question Bank" textFill="#c02424">
                                        <font>
                                            <Font size="31.0"/>
                                        </font>
                                    </Label>
                                    <HBox prefHeight="31.0" prefWidth="600.0">

                                        <Label prefHeight="18.0" prefWidth="115.0" text="Select a category:"/>
                                        <ComboBox prefWidth="150.0" promptText="Default" styleClass="combo-box">
                                            <HBox.margin>
                                                <Insets/>
                                            </HBox.margin>
                                            <padding>
                                                <Insets left="10.0"/>
                                            </padding>
                                        </ComboBox>

                                    </HBox>
                                    <Label prefHeight="18.0" prefWidth="282.0"
                                           text="The default category for questions shared in context"/>
                                    <CheckBox mnemonicParsing="false" prefHeight="19.0" prefWidth="248.0"
                                              text="Also show questions from subcategories"/>
                                    <CheckBox mnemonicParsing="false" prefHeight="18.0" prefWidth="155.0"
                                              text="Also show old questions"/>
                                    <Button mnemonicParsing="false" prefHeight="39.0" prefWidth="178.0"
                                            styleClass="editionbutton" text="CREATE A NEW QUESTION ...">
                                        <font>
                                            <Font name="System Bold" size="12.0"/>
                                        </font>
                                    </Button>
                                    <padding>
                                        <Insets left="10.0" right="10.0"/>
                                    </padding>

                                </VBox>
                            </content>
                        </Tab>
                        <Tab text="Categories"/>
                        <Tab text="Import"/>
                        <Tab text="Export"/>
                    </tabs>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </TabPane>
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0" top="20.0"/>
            </VBox.margin>
            <padding>
                <Insets top="20.0"/>
            </padding>
        </VBox>
    </children>
</VBox>

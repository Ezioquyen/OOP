                                                        <VBox fx:id="dropZone" alignment="CENTER" prefHeight="157.0"
                                                              prefWidth="333.0"
                                                              style="-fx-border-style: dashed; -fx-border-color: grey;"
                                                              VBox.vgrow="ALWAYS">
                                                            <children>
                                                                <VBox alignment="CENTER" prefHeight="95.0"
                                                                      prefWidth="257.0">
                                                                    <VBox.margin>
                                                                        <Insets bottom="20.0" left="60.0" right="60.0"
                                                                                top="20.0"/>
                                                                    </VBox.margin>
                                                                    <children>
                                                                        <ImageView fitHeight="38.0" fitWidth="37.0"
